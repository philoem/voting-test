{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentSize": 1,
		"lineWidth": 100,
		"ignore": ["**/node_modules/**", ".cjs", ".config"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "none",
			"semicolons": "asNeeded"
		}
	}
}
